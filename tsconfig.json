{
  "compilerOptions": {
    "target": "es2022",
    "lib": [
      "es2022"
    ],
    "moduleDetection": "force",
    "rootDir": "src",
    "module": "NodeNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "exclude": [
    "eslint.config.mjs",
    "./dist/**/*"
  ]
}